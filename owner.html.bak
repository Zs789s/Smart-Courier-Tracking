    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <title>Owner Dashboard â€” Smart Courier System</title>
        <link rel="stylesheet" href="css/style.css">
        <link rel="stylesheet" href="css/owner.css">
        <style>
            /* Minimal page-scoped styles to ensure clarity if owner.css is missing */
            .hidden{display:none!important}
            .auth-loading{padding:30px;text-align:center;color:#667eea}
            .logout-btn{background:transparent;border:1px solid #667eea;color:#667eea;padding:8px 12px;border-radius:6px;cursor:pointer}
            .container{max-width:1100px;margin:28px auto;padding:0 20px}
        </style>
    </head>
    <body>
        <header>
            <nav>
                <a href="landing.html" class="logo">ðŸš€ SCS</a>
                <ul>
                    <li><a href="landing.html">Home</a></li>
                    <li><a href="track.html">Track</a></li>
                    <li><a href="order-delivery.html">Order</a></li>
                    <li><a href="about.html">About</a></li>
                    <li><a href="contact.html">Contact</a></li>
                </ul>
            </nav>
        </header>

        <main class="container">
            <div id="auth-loading" class="auth-loading">Verifying access...</div>

            <div id="owner-app" class="hidden">
                <div style="display:flex;justify-content:space-between;align-items:center">
                    <h1>Owner Dashboard</h1>
                    <div>
                        <span id="owner-ident" style="margin-right:12px"></span>
                        <button id="logout" class="logout-btn">Logout</button>
                    </div>
                </div>

                <section id="owner-controls">
                    <h2>Your Orders</h2>
                    <div id="orders-list">(orders will appear here)</div>
                </section>
            </div>
        </main>

        <script>
            // Minimal client-side auth check: uses token from localStorage to call /api/me
            async function verifyAccess() {
                const token = localStorage.getItem('token');
                if (!token) return window.location = 'owner-login.html';

                try {
                    const resp = await fetch('/api/me', { headers: { 'Authorization': 'Bearer ' + token, 'Accept': 'application/json' } });
                    if (!resp.ok) {
                        localStorage.removeItem('token');
                        return window.location = 'owner-login.html';
                    }
                    const me = await resp.json();
                    document.getElementById('owner-ident').textContent = `${me.username} (ID: ${me.id})`;
                    document.getElementById('auth-loading').classList.add('hidden');
                    document.getElementById('owner-app').classList.remove('hidden');

                    // Optionally, fetch and show owner orders (if an endpoint exists)
                    try {
                        const ownOrders = await fetch('/api/orders', { headers: { 'Authorization': 'Bearer ' + token } });
                        if (ownOrders.ok) {
                            const json = await ownOrders.json();
                            const list = json.orders || [];
                            const container = document.getElementById('orders-list');
                            if (list.length === 0) container.textContent = 'No orders yet.';
                            else container.innerHTML = list.map(o => `<div style="padding:8px;border-bottom:1px solid #eee"><strong>${o.tracking_number || o.trackingNumber}</strong> â€” ${o.status}</div>`).join('');
                        }
                    } catch (err) {
                        console.warn('Could not load orders', err);
                    }
                } catch (err) {
                    console.error('Auth check failed', err);
                    localStorage.removeItem('token');
                    window.location = 'owner-login.html';
                }
            }

            document.getElementById('logout').addEventListener('click', () => {
                localStorage.removeItem('token');
                window.location = 'owner-login.html';
            });

            verifyAccess();
        </script>
    </body>
